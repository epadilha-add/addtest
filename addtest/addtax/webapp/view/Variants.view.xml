<mvc:View controllerName="AddPlatform.controller.Variants" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns="sap.m" height="100%" xmlns:table="sap.ui.table">
	<Page id="IdPage">
		<headerContent>
			<core:Fragment fragmentName="AddPlatform.view.fragment.navegationButton.goBack" type="XML"/>
			<core:Icon src="sap-icon://settings"></core:Icon>
			<Title text="{i18n>ADD_TITLE_VARIANTS}"/>
			<ToolbarSpacer/>
		</headerContent>
		<l:ResponsiveSplitter defaultPane="default">
			<l:PaneContainer>
				<l:SplitPane id="default">
					<Panel>
						<layoutData>
							<l:SplitterLayoutData size="350px"/>
						</layoutData>
						<ComboBox change="handleChangePROCX" 
								  items="{ path: 'PROCX>/ALV', sorter: { path: 'PROCX' } , formatter: '.fnFormatter' }" 
						          id="IdPROCX"
						          width="350px">
							<core:Item key="{PROCX>PROCX}" text="{PROCX>PROCX} : {PROCX>DESCR}"/>
						</ComboBox>
					
						<List items="{ path: 'VARIA>/ALV' }" id="IdVARIA">
							<StandardListItem title="{VARIA>DESCR}" tooltip="{VARIA>VARIA}" type="Navigation" press=".handleChangeProcxVARIA"/>
						</List>
					</Panel>
				</l:SplitPane>
				<l:PaneContainer orientation="Vertical">
					<l:SplitPane>
						<Panel id="IdPARAM"></Panel>
					</l:SplitPane>
					<l:SplitPane>
						<Panel id="IdVPARA"></Panel>
					</l:SplitPane>
				</l:PaneContainer>
			</l:PaneContainer>
		</l:ResponsiveSplitter>
	</Page>
</mvc:View>